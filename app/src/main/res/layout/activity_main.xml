<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/main_content"
        ></FrameLayout>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/main_bottom_tabs">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="0dp"
            android:button="@null"
            android:drawableTop="@drawable/main_home_selector"
            android:drawablePadding="@dimen/little_space"
            android:gravity="center"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:text="首页"
            android:textColor="@drawable/main_color_selector"
            android:id="@+id/main_home"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="0dp"
            android:button="@null"
            android:drawableTop="@drawable/main_my_selector"
            android:drawablePadding="@dimen/little_space"
            android:gravity="center"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:text="我的"
            android:textColor="@drawable/main_color_selector"
            android:id="@+id/main_my"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="0dp"
            android:button="@null"
            android:drawableTop="@drawable/main_search_selector"
            android:drawablePadding="@dimen/little_space"
            android:gravity="center"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:text="发现"
            android:textColor="@drawable/main_color_selector"
            android:id="@+id/main_search"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="0dp"
            android:button="@null"
            android:drawableTop="@drawable/main_tuan_selector"
            android:drawablePadding="@dimen/little_space"
            android:gravity="center"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:text="团购"
            android:textColor="@drawable/main_color_selector"
            android:id="@+id/main_tuan"/>
    </RadioGroup>


</LinearLayout>
